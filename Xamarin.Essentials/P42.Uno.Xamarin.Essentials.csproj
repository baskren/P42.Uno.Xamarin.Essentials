<Project Sdk="MSBuild.Sdk.Extras/3.0.23">
  <PropertyGroup>
  
    <AssemblyName>P42.Uno.Xamarin.Essentials</AssemblyName>

    <!--
    Another example of how Micrsoft just doesn't care about those who don't use only their stuff
    <TargetFrameworks>netstandard2.0;Xamarin.iOS10;Xamarin.Mac20;MonoAndroid11.0;</TargetFrameworks>
    -->
	  <TargetFrameworks>net6.0;net6.0-android;net6.0-ios;net6.0-maccatalyst;net6.0-macos;</TargetFrameworks>
	  <TargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">net6.0-windows10.0.19041.0;net6.0;net6.0-android;net6.0-ios;net6.0-maccatalyst;net6.0-macos;</TargetFrameworks>
    <TargetFrameworks Condition=" $(SolutionName.Contains('.iOS')) ">net6.0-ios</TargetFrameworks>
    <TargetFrameworks Condition=" $(SolutionName.Contains('.macOS')) ">net6.0-macos</TargetFrameworks>
    <TargetFrameworks Condition=" $(SolutionName.Contains('.GtK')) ">net6.0</TargetFrameworks>
    <TargetFrameworks Condition=" $(SolutionName.Contains('.WPF')) ">net6.0</TargetFrameworks>
    <TargetFrameworks Condition=" $(SolutionName.Contains('.Windows')) ">net6.0-windows10.0.19041.0</TargetFrameworks>

 </PropertyGroup>



  <!-- ANDROID -->
  <PropertyGroup Condition=" $(TargetFramework.ToLower().Contains('android')) And '$(Configuration)'=='Debug' ">
    <WarningLevel>5</WarningLevel>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.ToLower().Contains('android')) ">
    <Compile Include="**\*.android.cs" />
    <Compile Include="**\*.android.*.cs" />
    <AndroidResource Include="Resources\xml\*.xml" />
    <PackageReference Include="Xamarin.AndroidX.Browser" Version="1.3.0" />
    <PackageReference Condition=" !$(TargetFramework.ToLower().Contains('net')) " Include="System.Numerics.Vectors" Version="4.5.0" />    
    <Reference Condition=" !$(TargetFramework.ToLower().Contains('net')) " Include="System.Numerics" />
  </ItemGroup>

  <!-- IOS -->
  <ItemGroup Condition=" $(TargetFramework.ToLower().Contains('ios')) OR $(TargetFramework.ToLower().Contains('maccatalyst'))">
    <Compile Include="**\*.ios.cs" />
    <Compile Include="**\*.ios.*.cs" />
    <PackageReference Condition=" !$(TargetFramework.ToLower().Contains('net')) " Include="System.Numerics.Vectors" Version="4.5.0" />
    <Reference Condition=" !$(TargetFramework.ToLower().Contains('net')) " Include="System.Numerics" />
    <Reference Condition=" !$(TargetFramework.ToLower().Contains('net')) " Include="OpenTK-1.0" />
  </ItemGroup>  

  <!-- MACOS -->
  <ItemGroup Condition=" $(TargetFramework.ToLower().Contains('macos')) OR $(TargetFramework.ToLower().Contains('xamarin.mac'))">
    <Compile Include="**\*.macos.cs" />
    <Compile Include="**\*.macos.*.cs" />
    <Reference Condition=" !$(TargetFramework.ToLower().Contains('net')) " Include="System.Numerics" />
    <Reference Condition=" !$(TargetFramework.ToLower().Contains('net')) " Include="System.Numerics.Vectors" />
    <Reference Condition=" !$(TargetFramework.ToLower().Contains('net')) " Include="OpenTK" />
  </ItemGroup>

  <!-- MacCatylst -->
  <ItemGroup Condition=" $(TargetFramework.ToLower().Contains('maccatalyst')) ">
    <Compile Include="**\*.maccatylst.cs" />
    <Compile Include="**\*.maccatylst.*.cs" />
  </ItemGroup>  

  <!-- TIZEN -->
  <ItemGroup Condition=" $(TargetFramework.ToLower().Contains('tizen')) ">
    <PackageReference Include="Uno.WinUI.Runtime.Skia.Tizen" Version="4.5.9" />
    <Compile Include="**\*.tizen.cs" />
    <Compile Include="**\*.tizen.*.cs" />
  </ItemGroup>

  <!-- UWP -->
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('uap10.0')) ">
    <!-- sourcelink: Embed source files that are not tracked by the source control manager to the PDB -->
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <!-- sourcelink: Include PDB in the built .nupkg -->
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('uap10.0')) ">
    <Compile Include="**\*.uwp.cs" />
    <Compile Include="**\*.uwp.*.cs" />
  </ItemGroup>

  <!-- WinUI Windows -->
  <ItemGroup Condition=" $(TargetFramework.Contains('windows')) ">
		<PackageReference Include="Microsoft.WindowsAppSDK" Version="1.1.4" />
    <Compile Include="**\*.uwp.cs" />
    <Compile Include="**\*.uwp.*.cs" />
  </ItemGroup>

  <!-- NetStandard bait -->
  <ItemGroup Condition="  $(TargetFramework.ToLower().StartsWith('netstandard')) OR $(TargetFramework.ToLower().Equals('net6.0')) ">
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <Compile Include="**\*.netstandard.cs" />
    <Compile Include="**\*.netstandard.*.cs" />
  </ItemGroup>

</Project>
